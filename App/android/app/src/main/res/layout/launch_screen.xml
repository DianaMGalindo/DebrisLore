<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_gb">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/appicon600x600"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/varelaroundpreciousbold"
        android:gravity="center"
        android:text="Reporting citizen science data"
        android:textAlignment="center"
        android:textColor="#353C56"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="one piece at a time"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/textView1"
        android:fontFamily="@font/varelaroundpreciousmedium"
        android:textColor="#353C56"/>

    <ImageView
        android:id="@+id/bottomasset"
        android:src="@drawable/splash_screen_bottom_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitEnd"
        android:layout_marginTop="500dp"
        android:adjustViewBounds="true" />

<!--        android:layout_marginBottom="60dp"-->
<!--        android:baselineAlignBottom="true"-->



</RelativeLayout>